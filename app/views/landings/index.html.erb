<!--hero-->
<section class="mt-20 w-full min-h-svh bg-gray-900 bg-no-repeat bg-center bg-cover bg-[url('w3070.webp')]">
  <div class="flex justify-center items-center py-8 px-4 w-full min-h-svh lg:py-16 z-10 bg-gradient-to-br from-orange-400/40 via-teal-950/20 to-gray-500/30 relative">
    <div class="flex flex-col justify-center items-center lg:w-5/6 text-center md:mt-44 lg:mt-60 bg-slate-600/50 p-2 rounded">
      <% if notice.present? %>
        <p class="py-2 px-3 bg-black mb-5 text-teal-400 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="py-2 px-3 bg-black mb-5 text-rose-400 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
      <% end %>
      <span class="mb-1 text-2xl font-semibold tracking-tight leading-none md:text-4xl lg:text-4xl text-white">
        Steer your career in the right direction.
      </span>
      <div class="flex flex-col justify-center items-center w-11/12">
        <%= image_tag("logo1.png") %>
      </div>
      <%= link_to "START YOUR JOURNEY", "#contact", class: "py-4 px-12 mt-6 rounded bg-yellow-300 text-slate-900 hover:bg-yellow-400 cursor-pointer" %>
    </div>
  </div>
</section>
<!--newsletter-->
